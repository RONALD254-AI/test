                </div>
            </div>
        </div>
    </section>

    <!-- Footer -->
    <footer>
        <p>&copy;2023 HighRon Tech Company. All rights reserved.</marquee></p>
    </footer>

    <!-- JavaScript for Carousel -->
    <script>
        let currentIndex = 0;
const reviews = document.querySelectorAll('.carousel-item');
const totalReviews = reviews.length;

function showNextReview() {
    // Hide the current review
    reviews[currentIndex].classList.remove('active');
    reviews[currentIndex].classList.add('prev'); // Slide out to the left

    // Move to the next review
    currentIndex = (currentIndex + 1) % totalReviews;

    // Show the next review
    reviews[currentIndex].classList.remove('next');
    reviews[currentIndex].classList.add('active'); // Slide into view
}

// Automatically cycle reviews every 4 seconds (slower transition)
setInterval(showNextReview, 4000);

console.log("Carousel script is running!"); // Debugging
    </script>
</body>
